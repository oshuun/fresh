#!/bin/bash
# Fresh install - Set up a fresh arch-based install

ROOT_UID=0    # Only users with $UID 0 have root privileges
E_NOTROOT=87  # Non-root exit error
ORIG_DIR=$PWD # There if user wants to return to original working directory

ALIASES=\
"\nalias search='pacman -Ss'\n\
alias searchy='yay -Ss'\n\
alias remove='sudo pacman -Rs'\n\
alias temacs='emacs -nw'"

cd $HOME

echo "Creating aliases..."

if [ "$SHELL" == "/bin/bash" ]
then
	echo -e ${ALIASES} >> .bashrc
elif [ "$SHELL" == "/bin/zsh" ]
then
	echo -e ${ALIASES} >> .zshrc
else
	echo "Can't create aliases."
	echo "Current shell: $SHELL"
	echo "Supported shells: bash, zsh"
	exit 1
fi

# Install packages
# Official repositories:
#	[
#		-base-devel
#		-code
#		-ffmpeg
#		-git
#		-neofetch
#		-transmission-gtk
#		-vlc
#		-xclip
#		-yay
#	]
# AUR:
#	[
#		-atom
#		-google-chrome
#	]

echo "Installing packages..."

sudo pacman -Syu base-devel code ffmpeg git neofetch \
								 transmission-gtk vlc xclip yay

yay -Syu atom google-chrome

echo $ORIG_DIR

exec $SHELL
